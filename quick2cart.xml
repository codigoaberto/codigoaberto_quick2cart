<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="cck_field" version="2.5" method="upgrade">
	<name>plg_cck_field_quick2cart</name>
	<author>Codigo Aberto</author>
	<authorEmail>marcio.marques@codigoaberto.pt</authorEmail>
	<authorUrl>http://www.codigoaberto.pt</authorUrl>
	<copyright>Copyright (C) 2015 Codigo Aberto. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>Mar 2015</creationDate>
	<description>Quick2Cart field for Seblod 3.x // by Codigo Aberto - Joomla Enterprise Support  - www.codigoaberto.pt</description>
	<version>2.0.0</version>
	
	<scriptfile>install/script.php</scriptfile>
	
	<files>
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>install</folder>
		<folder>tmpl</folder>
		
		<filename plugin="quick2cart">quick2cart.php</filename>
		<filename>index.html</filename>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_quick2cart.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_cck_field_quick2cart.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/libraries/cck/construction/field">
			<fieldset name="basic">
				<field name="" type="spacer" hr="false" />
			</fieldset>
			
			<fieldset name="advanced">
				<field name="group" type="text" default="PLG_CCK_FIELD_GROUP_CCK_ECOMMERCE" label="LIB_CCK_GROUP_LABEL" size="60" description="LIB_CCK_FIELD_GROUP_DESC" />
				<field name="export" type="cckexport" default="" label="LIB_CCK_EXPORT_LABEL" description="LIB_CCK_FIELD_EXPORT_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
